<Window x:Class="WpfAppNET48.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chargement..." 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Width="500" 
        Height="300"
        Topmost="True"
        Background="#FFD4E6F1">
  <Grid>
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
      <TextBlock Text="Mon Application" 
                      Foreground="Black" 
                      FontSize="28" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>
      <ProgressBar IsIndeterminate="True" 
                        Width="200" 
                        Height="10"
                        Margin="0,10"/>
      <TextBlock x:Name="StatusText" 
                      Text="Chargement en cours..." 
                      Foreground="Black"
                      HorizontalAlignment="Center"
                      FontSize="18" 
                      FontWeight="Bold"
                      Margin="0,20,0,0" 
                      Height="47" 
                      Width="360"
                      TextWrapping="Wrap"/>
    </StackPanel>
  </Grid>
</Window>
